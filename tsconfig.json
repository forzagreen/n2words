{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],

    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,

    "types": ["node"]
  },
  "include": [
    "index.js",
    "src/**/*.js",
    "test/**/*.js",
    "scripts/**/*.js",
    "bench/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
