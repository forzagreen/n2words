{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],

    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"]
  },
  "include": [
    "lib/**/*.js",
    "test/**/*.js",
    "scripts/**/*.js",
    "bench/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
