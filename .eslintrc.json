{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "es2017": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:ava/recommended",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsdoc/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "warn",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "no-invalid-this": "warn",
    "camelcase": "warn"
  }
}
