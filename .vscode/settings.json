{
  // Code Quality (Project Standards)
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // JavaScript Standard Style (Project Linter)
  "standard.enable": true,
  "standard.autoFixOnSave": true,
  "standard.validate": ["javascript"],
  "javascript.preferences.quoteStyle": "single",

  // Markdown Linting (Project Standard)
  "markdownlint.config": {
    "MD013": false
  },

  // Project Build Artifacts
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    "**/.nyc_output": true,
    "**/bench-results.json": true,
    "**/package-lock.json": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/.nyc_output/**": true
  }
}
