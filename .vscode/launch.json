  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (AVA)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Benchmark",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bench/index.js",
      "runtimeArgs": ["--expose-gc"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Add Language Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/add-language.js",
      "args": [
        "${input:newLanguageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "newLanguageCode",
      "type": "promptString",
      "description": "New language code to add (e.g., ko, pt-BR)",
      "default": ""
    }
  ]
}
