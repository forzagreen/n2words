{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Language Converter",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/.vscode/debug-converter.js",
      "args": [
        "${input:languageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (AVA)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:unit"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Integration Tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Performance Benchmark",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bench/perf.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Memory Benchmark",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bench/memory.js",
      "runtimeArgs": [
        "--expose-gc"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Language Validation Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/validate-language.js",
      "args": [
        "--verbose",
        "${input:languageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Add Language Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/add-language.js",
      "args": [
        "${input:newLanguageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Base Class (Prompt)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/lib/classes/${input:baseClass}.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "languageCode",
      "type": "promptString",
      "description": "Language code (e.g., en, es, zh-Hans)",
      "default": "en"
    },
    {
      "id": "newLanguageCode",
      "type": "promptString",
      "description": "New language code to add (e.g., ko, pt-BR)",
      "default": ""
    },
    {
      "id": "baseClass",
      "type": "pickString",
      "description": "Base class to debug",
      "options": [
        "abstract-language",
        "greedy-scale-language",
        "slavic-language",
        "south-asian-language",
        "turkic-language"
      ],
      "default": "abstract-language"
    }
  ]
}
