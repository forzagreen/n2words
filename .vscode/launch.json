{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Language Converter",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/.vscode/debug-converter.js",
      "args": [
        "${input:languageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Language Converter (Custom Numbers)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/.vscode/debug-converter.js",
      "args": [
        "${input:languageCode}",
        "${input:customNumbers}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (AVA)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Performance Benchmark",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bench/perf.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Memory Benchmark",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bench/memory.js",
      "runtimeArgs": [
        "--expose-gc"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Language Validation Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/validate-language.js",
      "args": [
        "--verbose",
        "${input:languageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Add Language Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/add-language.js",
      "args": [
        "${input:newLanguageCode}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "languageCode",
      "type": "promptString",
      "description": "Language code (e.g., en, es, zh-Hans)",
      "default": "en"
    },
    {
      "id": "customNumbers",
      "type": "promptString",
      "description": "Custom numbers to test (space-separated, e.g., 42 -100 3.14 9007199254740992n) - leave empty for default test cases",
      "default": ""
    },
    {
      "id": "newLanguageCode",
      "type": "promptString",
      "description": "New language code to add (e.g., ko, pt-BR)",
      "default": ""
    }
  ]
}
