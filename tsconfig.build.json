{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "lib",
    "rootDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["lib/n2words.js", "lib/languages/*.js"],
  "exclude": ["node_modules", "dist", "test", "bench", "scripts"]
}
